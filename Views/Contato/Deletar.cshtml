        @model MVC_DIO.Models.Contato

        @{
            ViewData["Title"] = "Deletar Contato";
        }

        <style>
              body{
             font-family: 'Roboto', sans-serif;
    }
        </style>
<body>
    

        <h1 style="color: red;" class="bald">Deseja realmente <strong>Deletar</strong> esse Contato ?</h1>

<hr>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Nome )
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Nome)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Telefone )
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Telefone)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Ativo )
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Ativo)
        </dt>
    </dl>
</div>

<form asp-action="Deletar">
    <input type="submit" value="Deletar" class="btn btn-danger"
</form>
<br>
<a asp-action="Index">Voltar</a>
</body>
