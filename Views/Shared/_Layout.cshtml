<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Agenda 2.0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_DIO.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Matemasie&display=swap" rel="stylesheet">
</head>
<style>

    body{
        font-family: 'Roboto', sans-serif;
        background-color: rgb(247, 209, 247);
    }
    .contatos{
        align-items: end;
    }

    img{
        width: 30px;
        margin-top:2px ;
    }

    .navbar{
        background-color: rgb(109, 2, 109);
    }

    .nav-link{
        display: flex;
        flex-direction: column;
        align-items: center;
        font-weight: 300; 
        margin: 5px;
        
        
    }



</style>

<body class="body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid hover-zoom">
                <a class="navbar-brand text-white " asp-area="" asp-controller="Home" asp-action="Index">AGENDA 2.0</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white  " asp-area="" asp-controller="Home" asp-action="Index"><img src="~/imagens/house-solid.svg">Inicio</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Contato" asp-action="Index"><img src="~/imagens/database-solid.svg">Banco de Contatos</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Contato" asp-action="Criar"><img src="~/imagens/address-book-regular.svg">Criar Contato</a>
                        </li>
                        <span class="contatos">
                            <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy"><img src="~/imagens/square-whatsapp-brands-solid.svg">Contato</a>
                        </li>
                        </span>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-white">
        <div class="container">
            &copy; 2024 - Agenda_MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Fale comigo.</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
